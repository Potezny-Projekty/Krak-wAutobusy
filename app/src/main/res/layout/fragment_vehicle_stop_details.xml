<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f6f6"

    tools:context=".ui.detailsvehiclestop.VehicleStopDetails">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/shadowall"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="6dp"
        android:id="@+id/upper_bar"
        android:layout_marginBottom="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mackiewicza"
            android:id="@+id/lineNumberTop"
            android:layout_alignBaseline="@id/back_arrow_details_menu"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp">

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_gray_hert_icon"
            android:id="@+id/heartIcon"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"

            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <ImageView
            app:srcCompat="@drawable/back_icon_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_arrow_details_menu"
            android:layout_weight="1"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cas"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/full_day_view"
        android:text="@string/timeDeparturesRename"
        android:layout_height="wrap_content"></TextView>



    <TextView
        android:layout_width="wrap_content"
        android:text="timeDeparturesNames"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="26dp"
        android:layout_marginStart="16dp"
        android:paddingLeft="20dp"
        android:textSize="16dp"
        android:textColor="#000"
        android:visibility="invisible"
        android:id="@+id/textFavourite"

        app:layout_constraintTop_toBottomOf="@id/upper_bar"
        android:layout_height="wrap_content"></TextView>

    <TextClock
        android:layout_width="200dp"
        android:text="17:22"
        app:layout_constraintBottom_toTopOf="@id/full_name_day_view"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:format12Hour="@null"
        android:format24Hour="HH:mm:ss"
        android:id="@+id/cac"
        android:textStyle="bold"
        android:background="@drawable/shadowall"
        android:textColor="#000000"
        android:layout_height="wrap_content"></TextClock>

    <TextView
        android:layout_width="200dp"
        android:text="Wtorek"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:id="@+id/full_name_day_view"
        android:background="@drawable/shadowall"
        android:textColor="#000000"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="200dp"
        android:text="17.11.2022"
        android:textStyle="bold"
        android:id="@+id/full_day_view"
        app:layout_constraintTop_toBottomOf="@id/full_name_day_view"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/shadowall"
        android:textColor="#000000"
        android:layout_height="wrap_content"></TextView>




    <TextClock
        android:layout_width="wrap_content"
        android:format12Hour="@null"
        android:format24Hour="HH:mm:ss"
        android:textSize="14sp"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/aa2"
        app:layout_constraintTop_toBottomOf="@id/aa2"
        app:layout_constraintStart_toStartOf="@id/aa2"

        android:layout_height="wrap_content"></TextClock>


    <ImageView
        android:layout_width="150dp"


        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"
        android:padding="30dp"
        android:background="@drawable/main_icons"

        android:id="@+id/aa2"

        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/upper_bar"
        android:layout_height="100dp"></ImageView>

    <AnalogClock

        android:id="@+id/aa2a"
        android:visibility="gone"
        android:layout_width="118dp"
        android:layout_height="98dp"
        android:background="@drawable/shadowall"
        android:layout_marginTop="24dp"


        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_bar" />

    <ImageView
        android:layout_width="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/upper_bar"
        android:src="@drawable/ic_bus_stop"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        android:id="@+id/aa"
        android:layout_marginRight="16dp"
        android:layout_height="100dp"></ImageView>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listdetailed"
        android:background="#fff"

        android:divider="#f6f6f6"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="90dp"

        android:dividerHeight="6.5dp"
        app:layout_constraintTop_toBottomOf="@+id/cas"

        android:layout_height="wrap_content"></ListView>

    <TextView
        android:layout_width="match_parent"
        android:text="(*) Przewidywany czas odjazdu"
        android:id="@+id/vf"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"></TextView>


    <LinearLayout
        android:layout_width="match_parent"


        android:visibility="invisible"

        android:id="@+id/ifwehavedata"

        android:orientation="vertical"
        android:layout_marginTop="340dp"
        app:layout_constraintBottom_toTopOf="@+id/vf"
        app:layout_constraintTop_toBottomOf="@+id/cas"


        android:layout_height="match_parent">




        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="italic"
            android:paddingLeft="20dp"
            android:textSize="25dp"
            android:paddingRight="20dp"
            android:paddingTop="50dp"
            android:textColor="@color/main_green"

            android:paddingBottom="110dp"





            android:text="Aktualnie nie \n posiadamy danych \n o odjazdach"
            android:textAlignment="center"
            android:layout_height="wrap_content"></TextView>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>