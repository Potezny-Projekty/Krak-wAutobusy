<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MapFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map2"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />















    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab2f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:borderWidth="0dp"
        android:contentDescription="sadasd"



        app:shapeAppearanceOverlay="@drawable/bus_icon"

        android:textAlignment="center"

        android:textColorHint="@color/greenmain"
        android:textSize="6sp"
        app:backgroundTint="#fff"
        app:icon="@drawable/map_icon"

        app:iconTint="@color/greenmain"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

        android:layout_marginBottom="11dp"
        android:layout_marginRight="20dp"


        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toTopOf="@id/extended_fab2"
        />









    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:borderWidth="0dp"
        android:contentDescription="sadasd"



        app:shapeAppearanceOverlay="@drawable/squere_styl_button"

        android:textAlignment="center"

        android:textColorHint="@color/greenmain"
        android:textSize="6sp"
        app:backgroundTint="#fff"
        app:icon="@drawable/location_icon"

        app:iconTint="@color/greenmain"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"


        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>