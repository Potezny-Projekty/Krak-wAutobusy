<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="match_parent"

    android:id="@+id/search_result_field"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="4dp"
        android:background="@drawable/shadowall"

        >







        <LinearLayout
            android:layout_width="wrap_content"

            android:orientation="horizontal"
            android:id="@+id/fcx"
            app:layout_constraintTop_toTopOf="@+id/heartIconVehicleStop"
            app:layout_constraintStart_toEndOf="@+id/lineNumberBox"
            android:layout_marginStart="8dp"
            android:layout_height="match_parent">





            <TextView
                android:text="Mackiewicza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/nameVehicleStop"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineNumberBox"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="wrap_content"

            android:orientation="vertical"
          android:scaleX="1.3"
            android:scaleY="1.3"
            android:padding="1dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:src="@drawable/ic_bus_stop"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"

                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>



        </LinearLayout>





        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/red_heart_icon"
            android:id="@+id/heartIconVehicleStop"
            android:layout_weight="1"

            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

